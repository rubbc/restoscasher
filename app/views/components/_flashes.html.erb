<% if notice %>
  <div class="flash flash-success" role="alert" id="flash-alert">
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="flash flash-warning" role="alert">
    <%= alert %>
  </div>
<% end %>



<script>
  setTimeout(() => {
   document.querySelector("#flash-alert").classList.add("disappear")
  }, 2000);
</script>

